{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
    	"esModuleInterop": true,
    	"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"rootDir": "./",
		"types": ["@types/node"] // Include both
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
